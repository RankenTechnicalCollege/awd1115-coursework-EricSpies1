@model PersonalFinanceTracker.Models.Transaction
@{
    ViewData["Title"] = "Edit Transaction";
}
<h2 class="mb-3">Edit Transaction</h2>

<form asp-action="Edit" method="post" id="__txEditForm">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Payee" class="form-label"></label>
        <input asp-for="Payee" class="form-control" />
        <span asp-validation-for="Payee" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select">
            <option value="Expense">Expense</option>
            <option value="Deposit">Deposit</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="AccountId" class="form-label">Account</label>
        <select asp-for="AccountId" asp-items="ViewBag.AccountId" class="form-select"></select>
        <span asp-validation-for="AccountId" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <label class="form-label">Categories</label>
        <select name="categoryIds" asp-items="ViewBag.Categories" multiple class="form-select" size="6"></select>
    </div>
</form>

<div class="position-fixed bottom-0 start-0 end-0 bg-white border-top shadow-sm p-3 text-end"
     style="z-index:1030;">
    <button type="submit" form="__txEditForm" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
