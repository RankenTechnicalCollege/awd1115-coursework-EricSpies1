@model IEnumerable<PersonalFinanceTracker.Models.Account>

<h1>Accounts</h1>

<p><a asp-action="Create" class="btn btn-primary">Add Account</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-area="Manage" asp-controller="Accounts" asp-action="Create">Add</a>
                    <a asp-area="Manage" asp-controller="Accounts" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-area="Manage" asp-controller="Accounts" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
