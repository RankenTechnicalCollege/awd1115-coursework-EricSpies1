@model IEnumerable<PersonalFinanceTracker.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<h1 class="mb-3">Transactions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Transaction</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Date</th>
            <th>Payee</th>
            <th class="text-end">Amount</th>
            <th>Account</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tx in Model)
        {
            <tr>
                <td>@tx.Date.ToShortDateString()</td>
                <td>
                    <a asp-route="transaction_friendly"
                       asp-route-id="@tx.Id"
                       asp-route-slug="@tx.Slug">
                        @tx.Payee
                    </a>
                </td>
                <td class="text-end">@tx.Amount.ToString("C")</td>
                <td>@tx.Account?.Name</td>
                <td>@tx.Type</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary"
                       asp-route="transaction_friendly"
                       asp-route-id="@tx.Id"
                       asp-route-slug="@tx.Slug">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
