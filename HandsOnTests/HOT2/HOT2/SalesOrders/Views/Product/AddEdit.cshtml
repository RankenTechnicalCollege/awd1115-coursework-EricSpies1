@model SalesOrders.Models.Product
@{
    var isEdit = Model.ProductID != 0;
    ViewData["Title"] = isEdit ? "Edit Product" : "Add Product";
    var categories = (IEnumerable<SalesOrders.Models.Category>)ViewBag.Categories;
}
<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="text-danger">
    @Html.ValidationSummary(excludePropertyErrors: true)
</div>

<form asp-action="AddEdit" method="post">
    @if (isEdit)
    {
        <input type="hidden" asp-for="ProductID" />
    }

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Category</label>
            <select asp-for="CategoryID" class="form-select"
                    asp-items="new SelectList(categories, nameof(SalesOrders.Models.Category.CategoryID), nameof(SalesOrders.Models.Category.CategoryName))">
                <option value="">-- Select --</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ProductImage" class="form-label"></label>
            <input asp-for="ProductImage" class="form-control" />
            <span asp-validation-for="ProductImage" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="ProductPrice" class="form-label"></label>
            <input asp-for="ProductPrice" class="form-control" />
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="ProductQty" class="form-label"></label>
            <input asp-for="ProductQty" class="form-control" />
            <span asp-validation-for="ProductQty" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="ProductDescShort" class="form-label"></label>
            <input asp-for="ProductDescShort" class="form-control" />
        </div>
        <div class="col-12">
            <label asp-for="ProductDescLong" class="form-label"></label>
            <textarea asp-for="ProductDescLong" class="form-control" rows="4"></textarea>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="List">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
