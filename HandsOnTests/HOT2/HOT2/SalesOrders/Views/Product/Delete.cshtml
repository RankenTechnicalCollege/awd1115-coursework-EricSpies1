@model SalesOrders.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<h1 class="mb-3">Delete Product</h1>
<p>Are you sure you want to delete <strong>@Model.ProductName</strong>?</p>

<dl class="row">
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.CategoryName</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.ProductPrice.ToString("C")</dd>
    <dt class="col-sm-2">Qty</dt>
    <dd class="col-sm-10">@Model.ProductQty</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="List">Cancel</a>
</form>
