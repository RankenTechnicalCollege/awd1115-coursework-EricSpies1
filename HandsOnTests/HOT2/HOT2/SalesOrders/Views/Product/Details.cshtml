@model SalesOrders.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h1>@Model.ProductName</h1>

<div class="row">
    <div class="col-md-4">
        <img src="~/content/images/@Model.ProductImage"
             alt="@Model.ProductName"
             class="img-fluid img-thumbnail" />
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.ProductPrice.ToString("C")</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.ProductQty</dd>
        </dl>
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </div>
</div>
