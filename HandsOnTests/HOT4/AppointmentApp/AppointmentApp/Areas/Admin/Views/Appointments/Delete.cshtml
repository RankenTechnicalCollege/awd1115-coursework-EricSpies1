@model AppointmentApp.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}
<h2>Delete Appointment</h2>

<div class="alert alert-warning">Are you sure you want to delete this appointment?</div>

<dl class="row">
    <dt class="col-sm-3">Start</dt>
    <dd class="col-sm-9">@Model.Start.ToString("f")</dd>
    <dt class="col-sm-3">Customer</dt>
    <dd class="col-sm-9">@Model.Customer?.Username</dd>
</dl>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
