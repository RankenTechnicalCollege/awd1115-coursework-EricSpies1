@model List<(KeyboardShop.Models.ApplicationUser User, System.Collections.Generic.IList<string> Roles)>

@{
    ViewData["Title"] = "User Manager";
}

<h2 class="mb-4">User Manager</h2>

@await Html.PartialAsync("_StatusMessage")

<div class="mb-3">
    <form asp-action="CreateAdminRole" method="post" class="d-inline">
        <button type="submit" class="btn btn-secondary">
            Create Admin Role
        </button>
    </form>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Email / Username</th>
                    <th>Name</th>
                    <th>Roles</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var user = item.User;
                    var roles = string.Join(", ", item.Roles);

                    <tr>
                        <td>@user.UserName</td>
                        <td>@($"{user.FirstName} {user.LastName}".Trim())</td>
                        <td>@roles</td>
                        <td class="text-end">
                            <form asp-action="DeleteUser" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Delete this user?');">
                                    Delete
                                </button>
                            </form>

                            <form asp-action="AddToAdmin" method="post" class="d-inline ms-1">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    Add to Admin
                                </button>
                            </form>

                            <form asp-action="RemoveFromAdmin" method="post" class="d-inline ms-1">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    Remove Admin
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
