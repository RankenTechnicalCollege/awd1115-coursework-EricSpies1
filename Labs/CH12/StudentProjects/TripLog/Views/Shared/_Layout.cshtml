<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Trip Log</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .banner {
            background: #6c757d;
            color: #fff;
            padding: 18px;
            font-size: 28px;
            text-align: center;
            margin-bottom: 15px;
        }

        .subhead {
            background: #e9ecef;
            color: #333;
            padding: 10px 15px;
            font-size: 18px;
            margin: 0 0 20px 0;
            text-align: center;
        }
    </style>
</head>
<body class="container py-3">
    <header class="mb-3">
        <div class="banner">My Trip Log</div>

        <nav class="mb-3">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trip" asp-action="Index">View Trips</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Manage" asp-action="Destinations">Manage Destinations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Manage" asp-action="Accommodations">Manage Accommodations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Manage" asp-action="Activities">Manage Activities</a>
                </li>
            </ul>
        </nav>

        @if (!string.IsNullOrWhiteSpace(ViewBag.SubHeader as string))
        {
            <div class="subhead">@ViewBag.SubHeader</div>
        }
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
