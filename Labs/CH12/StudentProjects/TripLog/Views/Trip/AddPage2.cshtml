@model TripLog.ViewModels.AddTripPage2VM
@{
    ViewData["Title"] = "Add Things To Do";
}

<form asp-action="AddPage2" method="post" class="row g-3">
    <input type="hidden" asp-for="TripId" />

    <div class="col-12">
        <label asp-for="SelectedActivityIds" class="form-label">
            Add Things To Do
        </label>
        <select asp-for="SelectedActivityIds"
                asp-items="Model.Activities"
                multiple="multiple"
                size="8"
                class="form-select">
        </select>
        <span asp-validation-for="SelectedActivityIds" class="text-danger"></span>
        <div class="form-text">
            Hold down the CTRL key to select multiple activities.
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-success" type="submit">Save</button>
        <button class="btn btn-secondary" formaction="@Url.Action("Cancel")" formmethod="post">Cancel</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
